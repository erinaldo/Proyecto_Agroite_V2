@model List<GestionAgroite_V1_CSI.Models.Almacen>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 35px 50px">
    <h2 class="page-header">
        Almacen
        <a href="~/Almacen/AgregarEditar" class="btn btn-success float-lg-right">Nuevo Almacen</a>
    </h2>
    <br />
    <table id="DataTablesLanguage" class="table align-items-center table-flush">
        <thead>
            <tr>
                <th style="width : 50px;"> ID</th>
                <th style="width : 150px;">Nombre</th>
                <th style="width : 150px;">Direccion</th>
                <th style="width : 150px;">localidad</th>
                <th style="width : 150px;">Provincia</th>
                <th style="width : 150px;">Capacidad</th>
                <th style="width : 300px">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr>

                <th>@(m.IdAlmacen)</th>
                <th>@(m.Producto.Nombre_Producto)</th>
                <th>@(m.Nombre)</th>
                <th>@(m.Direccion)</th>
                <th>@(m.Localidad)</th>
                <th>@(m.Provincia)</th>
                <th>@(m.Capacidad)</th>

                <th>
                    <a href="~/Almacen/Visualizar/@m.IdAlmacen" class="btn btn-xs btn-warning">Detalles</a>
                    <a href="~/Almacen/AgregarEditar/@m.IdAlmacen" class="btn btn-xs btn-primary">Modificar</a>
                    <a onclick="return confirm('Esta seguro que desea eliminabr el registro?...');"
                       href="~/Almacen/Eliminar/@m.IdProducto" class="btn btn-xs btn-danger">Eliminar</a>
                </th>
            </tr>
            }
        </tbody>
    </table>
</div>