
@model GestionAgroite_V1_CSI.Models.Actividad
@{
    ViewBag.Title = "AgregarEditar";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<ol class="breadcrumb">
    <li><a href="~/Actividad/Index">Actividad</a></li>
    <li> / </li>
    <li class="active">@(Model.IdActividad> 0 ? Model.Nombre : "Nuevo Actividad")</li>
</ol>

@using (Html.BeginForm("Guardar", "Actividad", FormMethod.Post))
{
    @Html.HiddenFor(x => x.IdActividad)

    <div class="card">
        <div class="card-header">Información de la Actividad</div>

        <div class="card-body">

            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.IdActividad, new { @class = "form-control", disabled = true }) <!--no podrá ser editado-->
            </div>

            <div class="form-group">
                @Html.Label("Nombre del la Actividad")
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "text-danger" })
            </div>

        </div>
    </div>

    <br />
    <div class="text-right">
        <button type="submit" class="btn btn-primary"> Registrar Actividad </button>
        <a href="~/Actividad" class="btn btn-danger"> Cancelar </a>
    </div>
}




