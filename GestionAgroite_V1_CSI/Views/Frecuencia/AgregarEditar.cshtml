
@model GestionAgroite_V1_CSI.Models.Frecuencia
@{
    ViewBag.Title = "AgregarEditar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header bg-white pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">

                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark text-success">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="~/Admin/Index">Dashboards</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="~/Frecuencia/Index">Frecuencia</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div class="body-content">
            <div class="row justify-content-center">
                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="checkout-address">
                        <div class="title-left">
                            <h2>Agregar Nueva Frecuencia</h2>
                        </div>
                        <br />
                        @using (Html.BeginForm("Guardar", "Frecuencia", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.IdFrecuencia)

                            <div class="card">
                                <div class="card-header">Información de la  Frecuencia</div>

                                <div class="card-body">

                                    <div class="form-group">
                                        @Html.Label("Id")
                                        @Html.TextBoxFor(x => x.IdFrecuencia, new { @class = "form-control", disabled = true })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Nombre del Frecuencia")
                                        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>

                            <br />
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary"> Registrar Frecuencia</button>
                                <a href="~/Frecuencia" class="btn btn-danger"> Cancelar </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
