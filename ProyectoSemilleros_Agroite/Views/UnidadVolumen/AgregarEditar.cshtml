@model ProyectoSemilleros_Agroite.Models.UnidadVolumen
@{
    ViewBag.Title = "AgregarEditar";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<ol class="breadcrumb">
    <li><a href="~/UnidadVolumen/Index">Unidad de Volumen</a></li>
    <li> / </li>
    
    <li class="active">@(Model.IdUnidadVolumen> 0 ? Model.Nombre : "Nuevo Unidad de Volumen")</li>
</ol>

@using (Html.BeginForm("Guardar", "UnidadVolumen", FormMethod.Post))
{
    @Html.HiddenFor(x => x.IdUnidadVolumen)

    <div class="card">
        <div class="card-header">Información de Unidad de Volumen</div>

        <div class="card-body">

            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.IdUnidadVolumen, new { @class = "form-control", disabled = true }) 
            </div>

            <div class="form-group">
                @Html.Label("Nombre de la UnidadVolumen")
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "text-danger" })
            </div>

        </div>
    </div>

    <br />
    <div class="text-right">
        <button type="submit" class="btn btn-primary"> Registrar Unidad de Volumen</button>
        <a href="~/UnidadVolumen" class="btn btn-danger"> Cancelar </a>
    </div>
}
