@model List<ProyectoSemilleros_Agroite.Models.Producto>
@{
    ViewBag.Title = "Index";

}
<div class="about-box-main">
    <div class="container">
        <div class="row my-4">
            <div class="col-12">
                <h2 class="noo-sh-title">Mis Productos</h2>
            </div>
            @foreach (var item in Model)
            {
                var base64 = Convert.ToBase64String(item.Imagenes_Producto);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);<!-- Producto 1 -->
                <div class="col-sm-6 col-lg-3">
                    <div class="hover-team">
                        <div class="our-team">
                            <img src="@imgSrc"  style="height:200px;" alt="" />

                            <div class="team-content">
                                <h3 class="title"><b><i class="fa fa-fire"></i>&nbsp; @item.Nombre_Producto</b></h3> <span class="post">@item.Categoria.Nombre</span>
                            </div>
                            <ul class="social">
                                <li>
                                    <a href="/Producto/AgregarEditar/?id=@item.IdProducto" class=" fa fa-edit"></a>
                                </li>
                                <li>
                                    <a href="/Producto/Eliminar/?id=@item.IdProducto" class="fa fa-trash"></a>
                                </li>


                            </ul>
                            <div class="icon"> <i class="fa fa-plus" aria-hidden="true"></i> </div>
                        </div>
                        <div class="team-description">
                            <p><b>&nbsp;@item.Descripcion_Producto</b></p>
                        </div>
                        <hr class="my-0">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
