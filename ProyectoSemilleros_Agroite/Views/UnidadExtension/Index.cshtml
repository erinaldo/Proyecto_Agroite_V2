@model List<ProyectoSemilleros_Agroite.Models.UnidadExtension>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2 class="page-header">
    Unidad de Extension
    <a href="~/UnidadExtension/AgregarEditar" class="btn btn-success float-lg-right">Nuevo Unidad de Extension</a>
</h2>
<br />
<table id="DataTablesLanguage" class="table align-items-center table-flush">
    <thead>
        <tr>
            <th style="width : 50px;"> ID</th>
            <th style="width : 150px;">Nombre</th>
            <th style="width : 300px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <th>@(m.IdUnidadExtension)</th>
                <th>@(m.Nombre)</th>
                <th>
                    <a href="~/UnidadExtension/Visualizar/@m.IdUnidadExtension" class="btn btn-xs btn-warning">Detalles</a>
                    <a href="~/UnidadExtension/AgregarEditar/@m.IdUnidadExtension" class="btn btn-xs btn-primary">Modificar</a>
                    <a onclick="return confirm('Esta seguro que desea eliminabr el registro?...');"
                       href="~/UnidadExtension/Eliminar/@m.IdUnidadExtension" class="btn btn-xs btn-danger">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>

