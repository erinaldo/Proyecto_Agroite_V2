<script>


    Culqi.publicKey = 'pk_test_88ec032fea5c8f35';

    $('#buyButton').on('click', function (e) {
        var Total = $("#TotalCompra").val();
        if (Total == "" || Total == '0') {
            alert("No tiene Prouductos")
            return;
        }
        var  precio = parseInt($("#TotalCompra").val()) * 100;
        Culqi.settings({
            title: 'AgroIte',
            currency: 'PEN',
            description: 'Agricola',
            amount: precio
        });
        Culqi.open();
        e.preventDefault();
    });

    function culqi() {
        if (Culqi.token) {
            var token = Culqi.token.id;
            console.log(token);
            var Total = $("#TotalCompra").val();
            if (Total == "") {
                alert("total vvacio")
                return;
            }
            var correo = Culqi.token.email;
            var data = { producto: 'productos', correo: correo, token: token, precio: Total }
            $.ajax({
                url: '/Pedido/Pagar/',
                type: 'POST',
                data: data,
                datatype: 'json',
                success: function (response) {
                    console.log(response);
                    alert("venta Exitosa")
                },
                error: function (err) { 
                    console.log(err);
                }
            });
        } else {
            console.log(Culqi.error);
            // alert(Culqi.error.user_message);
        }
    }


</script>