@model List<FrontEndAgroIte_V1_CSI.Models.Usuario>
@{
    ViewBag.Title = "Perfil";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>ABOUT US</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item active">Acerca de Nuestros Productores</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start About Page  -->
<div class="about-box-main">
    <div class="container">

        <div class="row my-4">
            <div class="col-12">
                <h2 class="noo-sh-title">Productores</h2>
            </div>
            @foreach (var item in Model)
            {
                var base64 = Convert.ToBase64String(item.Foto_Perfil);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);<!-- Producto 1 -->
                <div class="col-sm-6 col-lg-3">
                    <div class="hover-team">
                        <div class="our-team">
                            <img src="@imgSrc" style="height:200px;" alt="" />
                            <img src="~/assets/images/img-1.jpg" alt="" />
                            <div class="team-content">
                                
                                <h3 class="title"><b><i class="fa fa-fire"></i>&nbsp; @item.Nombres,@item.Apellidos</b></h3> <span class="post">@item.Nombres</span>
                            </div>
                            <ul class="social">
                                <li>
                                    <a href="#" class="fab fa-facebook"></a>
                                </li>
                                <li>
                                    <a href="#" class="fab fa-twitter"></a>
                                </li>
                               
                            </ul>
                            <div class="icon"> <i class="fa fa-plus" aria-hidden="true"></i> </div>
                        </div>
                        <div class="team-description">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent urna diam, maximus ut ullamcorper quis, placerat id eros. Duis semper justo sed condimentum rutrum. Nunc tristique purus turpis. Maecenas vulputate. </p>
                        </div>
                        <hr class="my-0">
                    </div>
                </div>
            }

            </div>

    </div>
</div>


