<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Nuestro Productos</h1>
                    <p>!Ultimos prodcutos Registrados¡</p>
                    <div class="demo">
                        <form class="form-search">
                            <div class="input-group">
                                <input class="form-control form-text" maxlength="128" placeholder="Buscar" size="15" type="text" />
                                <span class="input-group-btn"><button class="btn btn-dark"><i class="fa fa-search fa-lg"></i></button></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <a href="~/Productos/CatalogoProductos/" class="why-text">Todo</a>
                        @foreach (var item in objcategoria)
                        {
                            if (ViewBag.productos != null)
                            {
                                foreach (var obj in objproducto)
                                {
                                    if (item.IdCategoria == obj.IdCategoria)
                                    {
                                        if (Array.Exists(existe, x => x == item.IdCategoria.ToString()))
                                        {
                                        }
                                        else
                                        {
                                            indice++;
                                            <a href="~/Productos/CatalogoProductos/@item.IdCategoria" class="why-text">@item.Nombre</a>
                                            existe[indice] = item.IdCategoria.ToString();
                                        }
                                    }
                                }
                            }
                            else
                            {
                                foreach (var obj in Model)
                                {
                                    if (item.IdCategoria == obj.IdCategoria)
                                    {
                                        if (Array.Exists(existe, x => x == item.IdCategoria.ToString()))
                                        {
                                        }
                                        else
                                        {
                                            indice++;
                                            <a href="~/Productos/CatalogoProductos/@item.IdCategoria" class="why-text">@item.Nombre</a>
                                            existe[indice] = item.IdCategoria.ToString();
                                        }
                                    }
                                }
                            }
                        }

                        @*<button class="active" data-filter="*">Todo</button>
        <button data-filter=".top-featured">Producto Destacado</button>
        <button data-filter=".best-seller">Los mas Vendidos</button>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 special-grid best-seller">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <div class="type-lb">
                                <p class="sale">Venta</p>
                            </div>
                            <img src="http://agroite.azurewebsites.net/Content/ProductosFiles/@item.Imagenes_Producto" style="height:350px;" class="img-fluid" onclick="" alt="Image" />
                      
                            <div class="mask-icon">
                                <ul>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right" title="Vista"><i class="fas fa-eye"></i></a></li>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right" title="Comparar"><i class="fas fa-sync-alt"></i></a></li>
                                    <li><a href="#" data-toggle="tooltip" data-placement="right" title="Añadir a la lista de deseos"><i class="far fa-heart"></i></a></li>
                                </ul>
                                <a class="cart" href="#">Añadir a Mis compras</a>
                            </div>
                        </div>
                        <div class="why-text">
                            <h4>@item.Nombre_Producto</h4>
                            <h5> @item.Precio_Referencial</h5>
                            <h5>  <a style="color:white" href="~/Productos/ProductosDetalles/?idProducto=@item.IdProducto">Comprar</a></h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
