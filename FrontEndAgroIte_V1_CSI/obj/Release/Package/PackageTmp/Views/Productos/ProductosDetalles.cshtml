@model FrontEndAgroIte_V1_CSI.Models.Producto
@{
    ViewBag.Title = "ProductosDetalles";
    List<FrontEndAgroIte_V1_CSI.Models.Asociacion> objasociacion = ViewBag.asociacion;
}

<!-- Start Top Search -->
<div class="top-search">
    <div class="container">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
        </div>
    </div>
</div>
<!-- End Top Search -->
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Detalle de la tienda</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Tienda</a></li>
                    <li class="breadcrumb-item active">Detalle de la tienda </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
           
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
           
                            <div class="carousel-item active"> <img class="d-block w-100"  src="http://localhost:54574//Content/ProductosFiles/@Model.Imagenes_Producto" alt="First slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="http://localhost:54574//Content/ProductosFiles/@Model.Imagenes_Producto" alt="Second slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="http://localhost:54574//Content/ProductosFiles/@Model.Imagenes_Producto" alt="Third slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="http://localhost:54574//Content/ProductosFiles/@Model.Imagenes_Producto" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="http://localhost:54574//Content/ProductosFiles/@Model.Imagenes_Producto" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="http://localhost:54574//Content/ProductosFiles/@Model.Imagenes_Producto" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>

                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <h2>@Model.Nombre_Producto</h2>
                        <h5> <del>s/.@Model.Precio_Referencial</del> >s/.@Model.Precio_Referencial, @Model.UnidadVolumen.Nombre</h5>
                        <p class="available-stock"><span> Más de 20 disponibles / <a href="#">8 vendidos</a></span><p>
                        <h4>Asociacion</h4>  
                        <p>@Model.Asociacion.Razon_Social</p>
                        <h4>Categoria:</h4>
                        <p>@Model.Categoria.Nombre</p>
                        <h4>Cantidad del Producida:</h4>
                        <p>@Model.Cantidad_Producida ,@Model.UnidadVolumen.Nombre</p>
                            <h4>Descripcion:</h4>
                        <p>
                            @Model.Descripcion_Producto
                        </p>
                        <ul>
                            <li>
                                <div class="form-group quantity-box">
                                    <label class="control-label">Cantidad a Comprar</label>
                                    <!-- <input class="form-control" value="1" min="1" max="20" id="txtcantidad" type="number">
                                     <select class="form-control"" aria-label="Default select example">
                                         <option selected>Seleccione </option>
                                         <option value="1">1 Tonelada</option>
                                         <option value="2">2 Toneladas</option>
                                         <option value="3">3 Toneladas</option>
                                     </select>
                                        -->
                                    <input type="number" name="txtcantidad" id="txtcantidad" min="3" class="form-control" value="" />
                                </div>
                            </li>
                        </ul>

                        <div class="price-box-bar">
                            <div class="cart-and-bay-btn">

                                <button class="btn hvr-hover" type="button" onclick="AddCart('@Model.IdProducto',' @Model.Nombre_Producto','@Model.Precio_Referencial','@Model.Imagenes_Producto')">AgregarCarrtito</button>
                            <!--    <a class="btn hvr-hover" href="~/Pedido/DetallePedido/">Agregar a mis Pedidos</a>  -->
                                <a class="btn hvr-hover" href="~/Pedido/DetallePedido">Pedidos</a>
                            </div>
                        </div>                       
                    </div>
                </div>
        </div>
    </div>
</div>
<!-- End Cart -->


<script>

    function AddCart(IdProducto, Descripcion_Producto, Precio_Referencial,img) {
        var cantidad = $("#txtcantidad").val();      
        if (cantidad=="0") {
            alert("la cantidad debe ser mayor a cero");
            return;
        }
      //  cantidad = 2;
        var data = { id_producto: IdProducto, nombre_producto: Descripcion_Producto, urlfoto: img, precio: Precio_Referencial, cantidad: cantidad}

        $.ajax({
            url: '/Home/AgregarCarrito/',
            type: 'post',
            datatype: 'json',
            data: data,
            success: function (response) {
                //Agregado
               // cantidad();
                actualizar();
                alert("Agregado Carrtio");

            },
            error: function (xhr, status) {
                alert(' existió un problema');
            },
        });
    }

    function actualizar() {
           $.ajax({
                url: '@Url.Action("_carrito", "Home")',
                dataType: 'html',
                traditional: true,
                type: 'POST',
                success: function (content) {
                    $("#itemscarrito").html(content);
                }
            });
    }

</script>